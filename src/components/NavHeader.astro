---
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];


---

<header class="flex justify-between items-center p-4 w-full max-w-7xl mx-auto">
    <a href="/" class="text-xl ">are.dev</a>
</header>
<section>
  <div class="px-8 md:px-12 mx-auto max-w-7xl py-1 lg:px-32">
    <ol role="list" class="flex flex-wrap gap-3">
      {
        tags.map((tag) => (
          <li class="inline-flex items-center uppercase mx-auto hover:text-orange-500 text-xs font-medium text-black">
            <a href={`/tags/${tag}`}>{tag}</a>
          </li>
        ))
      }
    </ol>
    </div>
</section>